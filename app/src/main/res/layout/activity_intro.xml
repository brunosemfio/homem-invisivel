<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:text="@string/txt_intro_title"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/intro_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/intro_title"
        android:layout_margin="16dp"
        android:text="@string/txt_intro_explanation"
        android:textSize="25sp" />

    <Button
        android:id="@+id/intro_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/txt_intro_start"
        android:textSize="20sp" />

</RelativeLayout>
